<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BattleShipsApp.MainPage"
             BackgroundColor="White">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Label 
            Text="Battleship Game"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,20,0,20"
            TextColor="Black" />

        <Grid
            x:Name="PlacementGrid"
            RowSpacing="5"
            ColumnSpacing="5"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            IsVisible="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <BoxView Grid.Row="0" Grid.Column="0" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="0" Grid.Column="1" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="0" Grid.Column="2" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="0" Grid.Column="3" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="1" Grid.Column="0" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="1" Grid.Column="1" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="1" Grid.Column="2" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="1" Grid.Column="3" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="2" Grid.Column="0" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="2" Grid.Column="1" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="2" Grid.Column="2" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="2" Grid.Column="3" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="3" Grid.Column="0" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="3" Grid.Column="1" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="3" Grid.Column="2" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="3" Grid.Column="3" Color="Gray" HeightRequest="50" WidthRequest="50" />
        </Grid>

        <Button 
            Text="Confirm Placement"
            x:Name="ConfirmButton"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="20"
            IsEnabled="False"
            IsVisible="True" />

        <Label
            x:Name="AttackGridText"
            Text="Attack Grid"
            FontSize="24"
            FontAttributes="Bold"
            IsVisible="False"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,20,0,20"
            TextColor="Black" />
        
        <Grid
            x:Name="AttackGrid"
            RowSpacing="5"
            ColumnSpacing="5"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            IsVisible="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <BoxView Grid.Row="0" Grid.Column="0" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="0" Grid.Column="1" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="0" Grid.Column="2" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="0" Grid.Column="3" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="1" Grid.Column="0" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="1" Grid.Column="1" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="1" Grid.Column="2" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="1" Grid.Column="3" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="2" Grid.Column="0" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="2" Grid.Column="1" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="2" Grid.Column="2" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="2" Grid.Column="3" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="3" Grid.Column="0" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="3" Grid.Column="1" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="3" Grid.Column="2" Color="Gray" HeightRequest="50" WidthRequest="50" />
            <BoxView Grid.Row="3" Grid.Column="3" Color="Gray" HeightRequest="50" WidthRequest="50" />
        </Grid>
        
        <Label
            x:Name="VictoryText"
            Text=""
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,20,0,20"
            TextColor="Black" />
        
        <Button 
            Text="Restart Game"
            x:Name="ResetButton"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="20"
            IsVisible="False" />
        
    </VerticalStackLayout>
</ContentPage>
